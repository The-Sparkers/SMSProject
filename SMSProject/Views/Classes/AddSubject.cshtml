@using SMSProject.Models
@model SMSProject.ViewModels.AdminViewModels.AddSubjectViewModel

@{
    int classId = (int)ViewBag.ClassId;
    Class c = new Class(classId, SMSProject.ServiceModules.Cryptography.Decrypt(Request.Cookies.Get("rwxgqlb").Value));
    ViewBag.Title = "Add Subject";
}

<h2>Add Subject for Class @c.Name</h2>
<br />

@using (Html.BeginForm("AddSubject", "Classes", new { id = classId }, FormMethod.Post,new { id = "addsub" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal agile_info_shadow">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-capitalize", placeholder="eg: English-A, Physics, Islamiyat" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="javascript:document.getElementById('addsub').submit()" class="btn btn-primary">Save</a>
            </div>
        </div>
    </div>
}
